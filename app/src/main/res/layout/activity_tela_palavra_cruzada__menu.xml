<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Palavra Cruzada"
           android:textSize="40dp"
           android:fontFamily="@font/livvic_medium"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:textColor="@color/corescura"
           />


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                >

                <Button
                    android:id="@+id/Level1"
                    android:text="Level 1"
                    android:layout_width="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level2"
                    android:text="Level 2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level3"
                    android:text="Level 3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                >

                <Button
                    android:id="@+id/Level4"
                    android:text="Level 4"
                    android:layout_width="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level5"
                    android:text="Level 5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level6"
                    android:text="Level 6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                >

                <Button
                    android:id="@+id/Level7"
                    android:text="Level 7"
                    android:layout_width="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp"
                    android:textColor="@color/cor2"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level8"
                    android:text="Level 8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level9"
                    android:text="Level 9"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                >

                <Button
                    android:id="@+id/Level10"
                    android:text="Level 10"
                    android:layout_width="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level11"
                    android:text="Level 11"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/Level12"
                    android:text="Level 12"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background" />

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>