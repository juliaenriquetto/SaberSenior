<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:backgroundTint="#162850"
        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Sobre Nós"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="No SaberSenior, nosso propósito é  capacitamos os idosos a viver plenamente. Oferecemos programas de bem-estar físico, social e mental, promovendo o envelhecimento ativo. Junte-se a nós nesta jornada!"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <Button
                android:id="@+id/dialog_Sair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:backgroundTint="#FFFFFF"
                android:textSize="18sp"
                android:textColor="#162850"
                android:layout_margin="16dp"
                android:gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
