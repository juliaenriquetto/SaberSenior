<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_jogos"
    android:orientation="vertical"
    tools:context=".TelaJogos">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOGOS"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maven_pro_bold"
        android:textColor="@color/white"
        android:textSize="55dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_background_jogos">

        <ImageButton
            android:id="@+id/btnJogoDaForca"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/forca"
            />

        <ImageButton
            android:id="@+id/btnJogoDaVelha"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/jododavelha"
            />

        <ImageButton
            android:id="@+id/btnPalavraCruzada"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="-350dp"
            android:src="@drawable/palavracruzada"
            />

        <ImageButton
            android:id="@+id/btnSudoku"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/sudoku"
            />

        <ImageButton
            android:id="@+id/btnCacaPalavra"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="-350dp"
            android:src="@drawable/cacapalavra"
            />

        <ImageButton
            android:id="@+id/btnMemoria"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/jogomemoria"
            />
    </LinearLayout>

    <include
        android:id="@+id/menu_horizontal"
        layout="@layout/activity_menu"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="-15dp"
        />

</LinearLayout>