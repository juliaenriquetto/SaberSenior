<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/oval_backgroud_perfil"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/imagemTeste" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="110dp"
        android:textColor="#FFFFFF"
        android:text="ANA MARQUES"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:background="@drawable/backgroud_conhecimento"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Horas jogadas"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />


<!--        <TextView-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:drawableEnd="@android:drawable/ic_dialog_info"-->
<!--            />-->
        <TextView
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="Conhecimento obtido"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
        />

    <TextView
        android:id="@+id/tvHorasJogadas"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="10"
        android:layout_marginTop="-95dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/tvConhecimento"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_marginTop="-85dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"
        android:textSize="70dp" />


    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="EDITAR PERFIL"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:padding="5dp"
        android:textSize="27dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#162850"
        />

</LinearLayout>