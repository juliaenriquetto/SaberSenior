<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/oval_backgroud_perfil"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/imagemTeste" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="110dp"
        android:textColor="#FFFFFF"
        android:text="ANA MARQUES"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:background="@drawable/backgroud_conhecimento"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="EDITAR PERFIL"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/oval_button_background"
        />

</LinearLayout>