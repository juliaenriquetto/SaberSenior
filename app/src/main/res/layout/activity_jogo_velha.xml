<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:backgroundTint="@color/black"
    tools:context=".JogoDaVelha.JogoDaVelha">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutPrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/quadrado_maior"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jogador 1"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/placar_um"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/quadrado_maior"
            android:orientation="vertical"

            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="Jogador 2"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/placar_dois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_marginTop="-10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutPrim">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt00"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp"/>

            <Button
                android:id="@+id/bt01"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt02"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt10"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt11"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt12"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt20"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt21"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bt22"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="28sp" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>